{
    "name": "basis-batch",
    "private": true,
    "version": "0.0.0",
    "main": "dist/electron-main/index.js",
    "scripts": {
        "dev": "vite --mode dev",
        "build": "vite build --mode dist",
        "dist": "vite build --mode dist && electron-builder",
        "release": "vite build --mode release && electron-builder"
    },
    "dependencies": {
        "element-plus": "2.1.10",
        "rollup-plugin-copy": "^3.4.0",
        "vue": "^3.2.25"
    },
    "devDependencies": {
        "@vitejs/plugin-vue": "^2.3.3",
        "electron": "^19.0.3",
        "electron-builder": "^23.0.3",
        "less": "^4.1.2",
        "typescript": "^4.5.4",
        "vite": "^2.9.9",
        "vite-plugin-electron": "^0.4.6",
        "vite-plugin-static-copy": "^0.5.0",
        "vue-tsc": "^0.34.7"
    },
    "build": {
        "appId": "com.template.desktop",
        "productName": "basis-batch",
        "asar": true,
        "directories": {
            "output": "release/${version}"
        },
        "files": [
            "dist"
        ],
        "mac": {
            "artifactName": "${productName}_${version}.${ext}",
            "target": [
                "dmg"
            ]
        },
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "artifactName": "${productName}_${version}.${ext}"
        },
        "nsis": {
            "oneClick": false,
            "perMachine": false,
            "allowToChangeInstallationDirectory": true,
            "deleteAppDataOnUninstall": false
        },
        "publish": [
            {
                "provider": "generic",
                "url": "http://127.0.0.1:8080"
            }
        ],
        "releaseInfo": {
            "releaseNotes": ""
        },
        "extraResources": [
            {
                "from": "exe/basisu.exe",
                "to": "exe/basisu.exe"
            }
        ]
    }
}
